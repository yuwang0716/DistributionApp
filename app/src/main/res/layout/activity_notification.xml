<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liuhesan.app.distributionapp.ui.personcenter.ForgetPwdActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="?attr/colorPrimary">
        <ImageButton
            android:id="@+id/notification_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/mine_back"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="通知中心"
            android:textColor="@color/colorText_title" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/notification_system"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/notification_system"
            android:background="@drawable/finishorderbutton"
            android:textColor="@color/colorText_title"/>
        <Button
            android:id="@+id/notification_merchant"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/notification_merchant"
            android:background="@drawable/loseefficacybutton"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <com.liuhesan.app.distributionapp.widget.NoScrollViewPager
        android:id="@+id/notification_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.liuhesan.app.distributionapp.widget.NoScrollViewPager>

</LinearLayout>
