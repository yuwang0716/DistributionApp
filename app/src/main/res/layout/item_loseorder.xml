<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">
    <include layout="@layout/item_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="65dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:background="@color/colorText_title">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/order_detailstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x24"
            android:lineSpacingExtra="5dp"/>
        <TextView
            android:id="@+id/loseorder_reason"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:textSize="@dimen/x24"
            android:background="@drawable/paystatebutton"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/loseorder_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>